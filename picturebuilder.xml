<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="content" method="upgrade">
	<name>Picture builder (by web-tiki)</name>
	<author>web-tiki</author>
	<creationDate>march 2018</creationDate>
	<copyright>Copyright (C) 2005 - 2017 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE</license>
	<authorEmail>contact@web-tiki.com</authorEmail>
	<authorUrl>https://web-tiki.com</authorUrl>
	<version>0.0.2</version>
	<description>PLG_PICTUREBUILDER_DESC</description>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="thumb_params"
					type="repeatable"
					icon="list"
					description="Choose the thumbnail parameters"
					label="Thumbnail paramters"
					default='{"id":["0"],
						"info":["Tell me where"],
						"widths":["600,750,1200,1480,2001"],
						"heights":["600,750,1200,1480,2001"],
						"breakpoints":["450,650,950,1500"],
						"quality":["65"]}'>
					<fieldset hidden="true" name="thumb_params_modal" repeat="true">
						<field name="id"
							label="Params ID"
							type="number"
							default="0"
							required="true"
							min="0" step="1"/>
						<field name="info"
							label="Information"
							type="text"
							default="Tell me where"/>
						<field name="widths"
							label="Widths"
							type="text" 
							default="600,750,1200,1480,2001"
							required="true" />
						<field name="heights"
							label="Heights"
							type="text" />
						<field name="breakpoints"
							label="Breakpoints"
							type="text" 
							default="450,650,950,1500"
							required="true" />
						<field name="quality"
							label="Quality"
							type="number"
							default="65"
							required="true"
							min="0" step="1" />
					</fieldset>
				</field>



				<field type="spacer" name="breakpoints" label="&lt;h2&gt;Breakpoints and thumbnail sizes&lt;/h2&gt;" />
				<field name="thumb_XS"   type="text" description="XS thumbnail width"   label="Thumb XS"   default="450"  />
				<field name="breakpont_1" type="text" description="Smallest breakpoint" label="Breakpoint 1" default="450"  />
				<field name="thumb_S"    type="text" description="S thumbnail width"    label="Thumb S"    default="600"  />
				<field name="breakpont_2" type="text" description="Breakpoint 2"        label="Breakpoint 2" default="600"  />
				<field name="thumb_M"    type="text" description="M thumbnail width"    label="Thumb M"    default="1000"  />
				<field name="breakpont_3" type="text" description="Breakpoint 3"        label="Breakpoint 3" default="1000" />
				<field name="thumb_L"    type="text" description="L thumbnail width"    label="Thumb L"    default="1500" />
				<field name="breakpont_4" type="text" description="Breakpoint 4"        label="Breakpoint 4" default="1500" />
				<field name="thumb_XL"   type="text" description="XL thumbnail width"   label="Thumb XL"   default="2000"	/>
			</fieldset>
			<fieldset name="advanced">
				<field name="quality"   type="text" description="Quality of the thumbnails"   label="Quality"   default="80"	/>
				<field name="scalemethod" type="list" default="2" label="Scale method" description="Scale method to use to build the thumbnails">
  					<option value="2">SCALE_INSIDE</option>
  					<option value="3">SCALE_OUTSIDE</option>
					<option value="1">SCALE_FILL</option>
					<option value="4">CROP</option>
					<option value="5">CROP_RESIZE</option>
					<option value="6">SCALE_FIT</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<files>
		<folder>language</folder>
		<filename plugin="picturebuilder">picturebuilder.php</filename>
		<filename>params.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_picturebuilder.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_picturebuilder.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_content_picturebuilder.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_content_picturebuilder.sys.ini</language>
	</languages>
	<updateservers>
		<server type="extension" priority="1" name="Picture builder Update Server at GitHub"><![CDATA[https://web-tiki.github.io/picture-builder/updateserver.xml]]></server>
	</updateservers>
</extension>
